
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <h3>注意：Html解析规则为CSS选择器！！！Html链接无需加http://</h3>
        <div class="form-group">
            Html链接:
            <input type="text" name="Link" class="form-control search-query input-xxlarge" placeholder="www.cnblogs.com" />
            解析规则:
            <input type="text" name="Rules" class="form-control search-query input-xxlarge" placeholder="#cnblogs_post_body" />

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建解析规则" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回Html规则列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

