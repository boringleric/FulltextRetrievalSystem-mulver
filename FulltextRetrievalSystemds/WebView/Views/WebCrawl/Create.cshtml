
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary()
        <h4>链接请填写全名，包含http://，否则会报错！</h4>
        <div class="form-group">
            链接:
            <input type="text" name="Link" class="form-control search-query input-xxlarge" placeholder="http://www.cnblogs.com/"/>
            代号:
            <input type="text" name="NickName" class="form-control search-query input-xxlarge" placeholder="博客园"/>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建WebURI" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回WebURI列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

