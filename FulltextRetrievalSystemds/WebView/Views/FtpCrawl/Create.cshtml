
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary()
        <h3>
            请注意，链接与登录用户名不可为空，否则无法提交！无需添加ftp://，登录用户名匿名用户写Anonymous！
        </h3>
        <div class="form-group">
            链接:
            <input type="text" name="Link" class="form-control search-query input-xxlarge" placeholder="192.168.37.130" />
            代号:
            <input type="text" name="NickName" class="form-control search-query input-xxlarge" placeholder="测试" />
            登录用户名:
            <input type="text" name="UserName" class="form-control search-query input-xxlarge" placeholder="Anonymous" />
            密码:
            <input type="text" name="Password" class="form-control search-query input-xxlarge" placeholder="FTP密码" />

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建FtpURI" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回FtpURI列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

